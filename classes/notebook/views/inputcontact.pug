<html lang="en">
  head
    <meta charset="UTF-8">
    <meta Content-Type="application/json">
    title=data.name
    <link rel="stylesheet" type="text/css" href="/test.css">
  body
    div(class="container")
        <div class="sidebar light-grey card" id="mySidebar">
            <div class="bar-block">                
                <a class="bar-item button green" href="/">Home</a> 
                <a class="bar-item button blue" href="/contacts">Contacts</a>
                <a class="bar-item button orange" href="/contacts/new">Add new</a>
            </div>
        </div>    
        div(class="container card-4" style="margin-left:200px")
            div(class="container blue")
                h2="Contact card "+data.name
            form(class="container" action=url method=method)
                p
                label="Name"
                input(class="input border" type="text" id="name" name="name" value=data.name)
                p
                label="Tel"
                input(class="input border" type="text" id="tel" name="tel" value=data.tel)
                p
                label="Skype"                
                input(class="input border" type="text" id="skype" name="skype" value=data.skype)
                p
                input(class="check" type="checkbox" id="fav" name="fav" checked=data.fav)
                label=" Favorite"
                P
                input(class="button blue" type="submit" value="Save")

        
